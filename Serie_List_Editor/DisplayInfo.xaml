<Window x:Class="Serie_List_Editor.DisplayInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Serie_List_Editor"
        mc:Ignorable="d"
        Title="DisplayInfo" Height="450" Width="800" WindowStartupLocation="CenterOwner" Topmost="True" Background="#FF333333">
    <Grid>
        <Image x:Name="ImgBlock" HorizontalAlignment="Left" Height="250" Margin="10,10,0,0" VerticalAlignment="Top" Width="170" IsEnabled="False" Source="csharp.png" StretchDirection="DownOnly" />
        <TextBlock x:Name="TitleBlock" Margin="185,30,40,0" TextWrapping="Wrap" Text="Title Block" VerticalAlignment="Top" Height="68" Foreground="Yellow" FontSize="24" />
        <TextBlock x:Name="DescriptionBlock" Margin="185,103,40,0" TextWrapping="Wrap" Text="Description Block" VerticalAlignment="Top" Height="157" Foreground="Yellow" FontSize="18" IsEnabled="False" />
    </Grid>
</Window>